---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";

---

<Layout title="Radio Megactiva Online.">
	<main class="h-screen flex flex-col justify-between">
		<section>
			<Header />
		</section>

		<section class="container mx-auto grid grid-cols-1 md:grid-cols-8">
			<div class="col-[1/3] flex flex-col items-center">
				<div>
					<img
						class="rounded-lg"
						src="img/megaativa.jpg"
						width="300"
						height="300"
						alt="Logo"
					/>
				</div>
				<div class="mt-6 text-center">
					<p class="text-white font-bold text-sm">
						ESCÚCHANOS EN TUNEIN RADIO
					</p>
					<div class="flex">
						<a
							href="https://tunein.com/radio/Megactiva-Radio-s276543/"
							target="_blank"
							><img
								src="img/google_play.png"
								width="130"
								height="130"
								alt="Google Play"
							/></a
						>
						<a href="https://tunein.com/radio/Megactiva-Radio-s276543/"
							target="_blank"
							><img
								src="img/app_store.png"
								width="130"
								height="130"
								alt="Google Play"
							/></a
						>
					</div>
				</div>
			</div>
			<div class="col-[4/-1] md:flex justify-end hidden">
				<div class="text-right">
					<p class="fuentepersonal z-40">ESCÚCHANOS</p>
					<p class="fuentepersonal z-30">EN VIVO</p>
					<p class="fuentepersonal z-20">24/7</p>
					<p class="text-white font-semibold">© servistream.net | 2024</p>
				</div>
			</div>
		</section>

		<section>
			<iframe
				src="https://player.streamseguro.com/radio/megactiva/"
				frameborder="0"
				allowtransparency="true"
				style="width: 100%; border: 0;"></iframe>
		</section>

	</main>
</Layout>

<style>
	main {
		background-image: url(../img/james-kovin-F2h_WbKnX4o-unsplash.avif);
		background-repeat: no-repeat;
		background-position: center;
		background-size: cover;
	}

	.fuentepersonal {
		font-family: "Anton", sans-serif;
		position: relative;
		display: block;
		text-align: right;
		text-transform: uppercase;
		font-family: "Anton";
		font-weight: 400;
		font-size: 10rem;
		line-height: 0.866;
		color: #ffffff;
		text-shadow: 0px 12px 9px rgba(0, 0, 0, 0.35);
		letter-spacing: -7px;
	}

</style>
